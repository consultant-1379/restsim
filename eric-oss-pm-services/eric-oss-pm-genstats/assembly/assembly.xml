<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>file</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<!-- Include the built JAR file -->
		<fileSet>
			<directory>${project.build.directory}/../../../</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/genstats_files/lib</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		
		<fileSet>
			<directory>lib</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/genstats_files/lib</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Include script files from the bin directory -->
		<fileSet>
			<directory>bin</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Include config files -->
		<fileSet>
			<directory>config</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/config</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>


		<!-- Include deployment scripts -->
		<fileSet>
			<directory>deployment</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/deployment</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Include healthcheck scripts -->
		<fileSet>
			<directory>hc</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/hc</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Include template files -->
		<fileSet>
			<directory>templates</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/templates</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Include the logging utility scripts -->
		<fileSet>
			<directory>logging_util</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>/genstats_files/logging_util
			</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

	</fileSets>
</assembly>
